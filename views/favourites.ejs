<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Favourite Locations</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <h1>Favourite Pincode Locations</h1>

      <!-- Add the Go Back to Search Page button here -->
      <a href="/search" class="btn btn-secondary mb-3"
        >Go Back to Search Page</a
      >

      <table class="table mt-4">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Branch Type</th>
            <th>Delivery Status</th>
            <th>Circle</th>
            <th>District</th>
            <th>Division</th>
            <th>Region</th>
            <th>State</th>
            <th>Country</th>
          </tr>
        </thead>
        <tbody>
          <% favourites.forEach(favourite => { %>
          <tr>
            <td><%= favourite.name %></td>
            <td><%= favourite.description %></td>
            <td><%= favourite.branch_type %></td>
            <td><%= favourite.delivery_status %></td>
            <td><%= favourite.circle %></td>
            <td><%= favourite.district %></td>
            <td><%= favourite.division %></td>
            <td><%= favourite.region %></td>
            <td><%= favourite.state %></td>
            <td><%= favourite.country %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
